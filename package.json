{
    "name": "component-kit",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "apps/*"
        ]
    },
    "scripts": {
        "story": "yarn workspace ui-lib start-storybook -p 6006 --ci",
        "format": "yarn prettier --write \"**/*.{ts,tsx}\"",
        "build-storybook": "yarn workspasce ui-lib build-storybook --quiet",
        "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --storybook-build-dir=storybook-static --auto-accept-changes --allow-console-errors",
        "start:main": "yarn workspace main start",
        "build:main": "yarn workspace main build",
        "build:ui": "yarn workspace ui-lib build"
    },
    "devDependencies": {
        "prettier": "2.5.1",
        "pretty-quick": "3.1.3",
        "eslint": "8.30.0",
        "eslint-config-next": "12.0.8",
        "eslint-plugin-react": "7.28.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-storybook": "0.6.8",
        "eslint-plugin-tree-shaking": "1.10.0"
    }
}
